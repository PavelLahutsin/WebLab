
@{
    ViewBag.Title = "Index";
}


<div class="col-md-9">
    <h2>Список</h2>
    <ol type="A">
        @for (int i = 1; i < 5; i++)
        {
            <li>элемент @i списка</li>
        }
    </ol>
    <hr />
    <h2>Форма</h2>
   @using (Html.BeginForm("Index", "Home",
                  FormMethod.Get, new { @class = "form-horizontal" }))
   {
    <div class="col-md-8 col-md-offset-3">
        @Html.DropDownList("Colors")
    </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <label>
                        @Html.CheckBox("cBox1")Чек-бокс 1
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <label>
                        @Html.CheckBox("cBox1")Чек-бокс 2
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="radio" style="float:left">
                    <label>@Html.RadioButton("rButton", 1, true) Радио-1</label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="radio" style="float:left">
                    <label>@Html.RadioButton("rButton", 2, false) Радио-2</label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="inputLogin3" class="col-md-2 control-label">Логин</label>
            <div class="col-md-10">
                @Html.TextBox("login", null, new
           {
               @class = "form-control",
               placeholder = "Введите логин"
           })
            </div>
        </div>
        <div class="form-group">
            <label for="InputPassword3" class="col-md-2 control-label">Пароль</label>
            <div class="col-md-10">
                @Html.Password("password", null, new
           {
               @class = "form-control",
               placeholder = "Введите пароль"
           })
            </div>
        </div>

        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Отправить</button>
        </div>
        
   }
</div>

